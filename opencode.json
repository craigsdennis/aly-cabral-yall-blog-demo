{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "replicate": {
      "type": "local",
      "command": ["npx", "-y", "replicate-mcp"],
      "enabled": true,
      "environment": {
        "REPLICATE_API_TOKEN": "{env:REPLICATE_API_TOKEN}"
      }
    }
  },
  "permission": {
    "webfetch": "allow",
    "question": "deny"
  }
}
