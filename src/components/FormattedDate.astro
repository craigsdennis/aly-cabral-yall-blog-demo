---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>

<style>
	time {
		font-family: var(--font-body);
		font-weight: 500;
		letter-spacing: 0.01em;
	}
</style>
