---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title={`Blog | ${SITE_TITLE}`} 
			description="Thoughts on developer relations, go-to-market strategy, and building communities in tech." 
		/>
		<style>
			.blog-hero {
				padding: var(--space-2xl) var(--space-lg) var(--space-xl);
				text-align: center;
				position: relative;
			}
			
			.blog-hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 100%;
				height: 100%;
				background: radial-gradient(ellipse at top center, rgba(191, 87, 0, 0.06) 0%, transparent 60%);
				pointer-events: none;
			}
			
			.blog-hero h1 {
				font-size: clamp(2.5rem, 6vw, 4rem);
				margin-bottom: var(--space-md);
				opacity: 0;
				animation: fadeIn 0.6s ease 0.2s forwards;
			}
			
			.blog-hero .description {
				font-size: 1.25rem;
				color: var(--text-secondary);
				max-width: 600px;
				margin: 0 auto;
				opacity: 0;
				animation: fadeIn 0.6s ease 0.4s forwards;
			}
			
			.posts-container {
				max-width: 900px;
				margin: 0 auto;
				padding: 0 var(--space-lg) var(--space-2xl);
			}
			
			.posts-list {
				display: grid;
				gap: var(--space-lg);
				list-style: none;
				margin: 0;
				padding: 0;
			}
			
			.post-item {
				opacity: 0;
				animation: fadeIn 0.5s ease forwards;
			}
			
			.post-item:nth-child(1) { animation-delay: 0.1s; }
			.post-item:nth-child(2) { animation-delay: 0.2s; }
			.post-item:nth-child(3) { animation-delay: 0.3s; }
			.post-item:nth-child(4) { animation-delay: 0.4s; }
			.post-item:nth-child(5) { animation-delay: 0.5s; }
			
			.post-link {
				display: grid;
				grid-template-columns: 1fr;
				gap: var(--space-md);
				padding: var(--space-lg);
				background: var(--bg-primary);
				border: 1px solid var(--sand);
				border-radius: 12px;
				text-decoration: none;
				transition: all var(--transition-base);
			}
			
			.post-link:hover {
				border-color: var(--terracotta);
				transform: translateY(-4px);
				box-shadow: var(--shadow-lg);
			}
			
			.post-link.has-image {
				grid-template-columns: 200px 1fr;
				align-items: center;
			}
			
			.post-image {
				border-radius: 8px;
				overflow: hidden;
				aspect-ratio: 16/10;
			}
			
			.post-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform var(--transition-slow);
			}
			
			.post-link:hover .post-image img {
				transform: scale(1.05);
			}
			
			.post-content {
				display: flex;
				flex-direction: column;
				gap: var(--space-sm);
			}
			
			.post-date {
				font-size: 0.875rem;
				color: var(--text-secondary);
			}
			
			.post-title {
				font-family: var(--font-display);
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 0;
				line-height: 1.3;
				transition: color var(--transition-fast);
			}
			
			.post-link:hover .post-title {
				color: var(--burnt-orange);
			}
			
			.post-excerpt {
				color: var(--text-secondary);
				line-height: 1.6;
				margin: 0;
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}
			
			.empty-state {
				text-align: center;
				padding: var(--space-2xl) var(--space-lg);
				background: var(--bg-secondary);
				border-radius: 12px;
			}
			
			.empty-state h2 {
				font-size: 1.75rem;
				margin-bottom: var(--space-md);
			}
			
			.empty-state p {
				color: var(--text-secondary);
				font-size: 1.125rem;
				margin-bottom: var(--space-lg);
			}
			
			.empty-state a {
				display: inline-flex;
				align-items: center;
				gap: var(--space-sm);
				padding: 0.875rem 1.75rem;
				background: var(--burnt-orange);
				color: var(--warm-cream);
				border-radius: 8px;
				font-weight: 600;
				transition: all var(--transition-base);
			}
			
			.empty-state a:hover {
				background: var(--deep-rust);
				transform: translateY(-2px);
				box-shadow: var(--shadow-md);
			}
			
			@media (max-width: 768px) {
				.blog-hero {
					padding: var(--space-xl) var(--space-md);
				}
				
				.posts-container {
					padding: 0 var(--space-md) var(--space-xl);
				}
				
				.post-link.has-image {
					grid-template-columns: 1fr;
				}
				
				.post-image {
					aspect-ratio: 16/9;
				}
				
				.post-title {
					font-size: 1.25rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="blog-hero">
				<h1>Blog</h1>
				<p class="description">
					Thoughts on developer relations, go-to-market strategy, and building communities in tech.
				</p>
			</section>
			
			<div class="posts-container">
				{posts.length > 0 ? (
					<ul class="posts-list">
						{posts.map((post) => (
							<li class="post-item">
								<a href={`/blog/${post.id}/`} class:list={["post-link", { "has-image": post.data.heroImage }]}>
									{post.data.heroImage && (
										<div class="post-image">
											<Image width={400} height={250} src={post.data.heroImage} alt="" />
										</div>
									)}
									<div class="post-content">
										<p class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<h2 class="post-title">{post.data.title}</h2>
										{post.data.description && (
											<p class="post-excerpt">{post.data.description}</p>
										)}
									</div>
								</a>
							</li>
						))}
					</ul>
				) : (
					<div class="empty-state">
						<h2>Coming Soon</h2>
						<p>
							I'm working on some new content. Check back soon for posts about 
							developer relations, GTM strategy, and life in Austin.
						</p>
						<a href="/">
							Back to Home
							<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
				)}
			</div>
		</main>
		<Footer />
	</body>
</html>
